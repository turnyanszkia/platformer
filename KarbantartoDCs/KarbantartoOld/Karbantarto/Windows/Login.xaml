<Window x:Class="Karbantarto.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karbantarto.Windows"
        mc:Ignorable="d"
        Title="Login" Height="280" Width="360"
        ResizeMode="NoResize"
        Closing="CloseWindow">
    <Grid>
        <!--Grid.Background>
            <ImageBrush ImageSource="../Images/lrn.jpg" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background-->
        <Image HorizontalAlignment="Center" Height="100" Margin="0,15,0,0" VerticalAlignment="Top" Width="100" Source="../Images/LoginUsers.jpg"/>
        <TextBox Name="LoginNev" HorizontalAlignment="Center" Height="23" Width="300" Margin="0,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="LoginNev_TextChanged">
            <TextBox.Background>
                <ImageBrush ImageSource="..\Images\fn.jpg" AlignmentX="Left" AlignmentY="Center" Stretch="None"/>
            </TextBox.Background>
        </TextBox>
        <PasswordBox Name="Jelszo" HorizontalAlignment="Center" Height="23" Margin="0,170,0,0" VerticalAlignment="Top" Width="300" PasswordChanged="Jelszo_PasswordChanged" Password="">
            <PasswordBox.Background>
                <ImageBrush ImageSource="..\Images\pw.jpg" AlignmentX="Left" AlignmentY="Center" Stretch="None"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Button Name="Bejelentkezes" Content="Bejelentkezés" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="75" Click="Bejelentkezes_Click"/>
    </Grid>
</Window>
